lowVersion=`apache2 -v|awk '$3~/Apache/{print $3}'|awk -F '/' '{print ($2<2.4) ? 1 : 0}'`;
if [ $lowVersion -eq 1 ]; then
sed -i '/Require all granted/d' /etc/apache2/sites-enabled/xxb.conf
fi

cat << EOF

The xxb package has been successfully installed on this system.

Please run the following command to enable xxb:
    sudo apache2ctl restart

And then visit http://localhost/xxb/

EOF